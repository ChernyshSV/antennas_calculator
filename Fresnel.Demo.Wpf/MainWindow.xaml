<Window x:Class="AntennasCalculator.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        Title="Fresnel Relay Demo â€” Mapsui.Wpf 5.0.0-beta.20"
        Height="720" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="8">
            <TextBlock Text="Frequency (GHz):" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="FreqGHzBox" Width="80" Text="5.5" Margin="0,0,12,0"/>
            <TextBlock Text="Clearance (% of 1st zone):" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="ClearancePctBox" Width="60" Text="60" Margin="0,0,12,0"/>
            <Button x:Name="ClearBtn" Content="Clear points" Click="ClearBtn_Click" Margin="0,0,6,0"/>
            <Button x:Name="ComputeBtn" Content="Compute &amp; Draw" Click="ComputeBtn_Click"/>
            <TextBlock x:Name="StatusText" Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <m:MapControl Grid.Row="1" x:Name="MapCtrl"/>
    </Grid>
</Window>
