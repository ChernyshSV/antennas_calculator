<Window x:Class="AntennasCalculator.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AntennasCalculator.WpfApp.ViewModels"
        xmlns:m="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        Title="Antennas Calculator"
        Height="720"
        Width="1100">

    <Window.DataContext>
        <vm:LinkViewModel />
    </Window.DataContext>
    <!-- Horizontal split: top (map/profile), bottom (parameters like on screenshot) -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- top: map/profile -->
            <RowDefinition Height="5" />
            <!-- splitter -->
            <RowDefinition Height="Auto" />
            <!-- bottom: parameters -->
        </Grid.RowDefinitions>

        <!-- TOP PANEL (currently the map; later can switch to profile view) -->
        <Border Grid.Row="0"
                BorderBrush="#DDD"
                BorderThickness="0,0,0,1">
            <Grid>
                <m:MapControl x:Name="MapCtrl" />
            </Grid>
        </Border>

        <!-- SPLITTER -->
        <GridSplitter Grid.Row="1"
                      Height="5"
                      HorizontalAlignment="Stretch"
                      Background="#EEE" />

        <!-- BOTTOM PANEL: controls similar to the screenshot (placeholder, non-breaking) -->
        <Border Grid.Row="2"
                Padding="8"
                Background="#F8F8F8"
                BorderBrush="#DDD"
                BorderThickness="1,0,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Row 1: Frequency bands -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="Frequency:"
                                   Width="90"
                                   VerticalAlignment="Center" />
                        <UniformGrid Columns="6"
                                     Margin="8,0,0,0">
                            <RadioButton Content="900 MHz"
                                         GroupName="BandGroup"
                                         IsChecked="{Binding Band, ConverterParameter=900 MHz}" />
                            <RadioButton Content="2.4 GHz"
                                         GroupName="BandGroup" />
                            <RadioButton Content="3 GHz"
                                         GroupName="BandGroup" />
                            <RadioButton Content="4 GHz"
                                         GroupName="BandGroup" />
                            <RadioButton Content="5 GHz"
                                         GroupName="BandGroup"
                                         IsChecked="True" />
                            <RadioButton Content="11 GHz"
                                         GroupName="BandGroup" />
                        </UniformGrid>
                    </StackPanel>

                    <!-- Row 2: Numeric frequency + clearance that we already use in code-behind -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="Freq (GHz):"
                                   VerticalAlignment="Center" />
                        <TextBox x:Name="FreqGHzBox"
                                 Width="80"
                                 Text="{Binding FreqGHz, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="6,0,12,0" />
                        <TextBlock Text="Clearance (% of 1st zone):"
                                   VerticalAlignment="Center" />
                        <TextBox x:Name="ClearancePctBox"
                                 Width="60"
                                 Text="{Binding ClearancePct, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="6,0,12,0" />
                        <Button Content="Compute &amp; Draw"
                                Click="ComputeBtn_Click"
                                Margin="0,0,6,0" />
                        <Button Content="Clear"
                                Click="ClearBtn_Click" />
                    </StackPanel>

                    <!-- Row 3: Technology -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="Technology:"
                                   Width="90"
                                   VerticalAlignment="Center" />
                        <UniformGrid Columns="5"
                                     Margin="8,0,0,0">
                            <RadioButton Content="AirFiber"
                                         IsChecked="{Binding Technology, ConverterParameter=AirFiber}" />
                            <RadioButton Content="AirFiber X"
                                         IsChecked="{Binding Technology, ConverterParameter=AirFiber X}" />
                            <RadioButton Content="AirFiber FX"
                                         IsChecked="{Binding Technology, ConverterParameter=AirFiber FX}" />
                            <RadioButton Content="AirMax"
                                         IsChecked="{Binding Technology, ConverterParameter=AirMax}" />
                            <RadioButton Content="AirMax AC"
                                         IsChecked="{Binding Technology, ConverterParameter=AirMax AC}" />
                        </UniformGrid>
                    </StackPanel>

                    <!-- Row 4: Channel width -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <TextBlock Text="Channel Width:"
                                   Width="90"
                                   VerticalAlignment="Center" />
                        <Slider Minimum="5"
                                Maximum="160"
                                Value="{Binding ChannelWidthMHz, UpdateSourceTrigger=PropertyChanged}"
                                Width="200" />
                        <TextBlock Text="{Binding ChannelWidthMHz, StringFormat={}{0} MHz}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Row 5: Antenna gains -->
                    <UniformGrid Columns="2"
                                 Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,0,12,0">
                            <TextBlock Text="Access Point Gain:"
                                       Width="140"
                                       VerticalAlignment="Center" />
                            <ComboBox Width="120"
                                      SelectedValue="{Binding ApGainDbi}">
                                <ComboBoxItem Content="16 dBi" />
                                <ComboBoxItem Content="23 dBi" />
                                <ComboBoxItem Content="30 dBi" />
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Station Gain:"
                                       Width="140"
                                       VerticalAlignment="Center" />
                            <ComboBox Width="120"
                                      SelectedValue="{Binding StaGainDbi}">
                                <ComboBoxItem Content="16 dBi" />
                                <ComboBoxItem Content="23 dBi" />
                                <ComboBoxItem Content="30 dBi" />
                            </ComboBox>
                        </StackPanel>
                    </UniformGrid>

                    <!-- Status line -->
                    <TextBlock x:Name="StatusText"
                               Margin="0,4,0,0" />
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>